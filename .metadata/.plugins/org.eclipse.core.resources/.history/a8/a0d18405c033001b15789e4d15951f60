
public class Labs1_ex4 {
	
	public static void main(String[] args) throws Exception 
	   { 
	    int k=0; 
	    System.out.println(); 
	    for(int i = 0; i <7; i++)
	   { 
	       for(int j = 0; j <i; j++)
	       { 
	          k = k + 1; 
	          System.out.print(k); 
	          System.out.print(" "); 
	       } 
	       System.out.println(""); 
	  } 
	 } 
	} 
